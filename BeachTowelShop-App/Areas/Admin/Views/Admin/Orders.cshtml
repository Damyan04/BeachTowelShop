@model List<BeachTowelShop.Areas.Admin.Models.OrderViewModel>
@{
    ViewData["Title"] = "Admin-Order";
}
<div class="row-div" style="justify-content: flex-end;margin-top:5em;margin-bottom:-8em;">
    <nav aria-label="Page navigation example">
        <ul class="pagination">

            <li class="page-item"><a class="page-link" asp-action="Orders" asp-route-startPage="0">First</a></li>
            <li class="page-item"><a class="page-link" asp-action="Orders" asp-route-startPage="@(ViewBag.NextPage)" >Next</a></li>
            <li class="page-item"><a class="page-link" asp-action="Orders" asp-route-startPage="@(ViewBag.PreviousPage)" >Previous</a></li>

        </ul>
    </nav>
</div>
<div class="container admin">
    <h2>Orders</h2>
    
    <div class="cart">

        <div class="cart-size">


            <table>
                <tr class="wheat-smoke">

                    <td><span>Order number</span></td>
                    <td><span>Sum</span></td>
                    <td><span>Status</span></td>
                    <td></td>
                </tr>
                @foreach (var item in Model)
                {
                    <tr class="cart-products">

                        <td class="cart-size-td"><span>@item.Id</span></td>
                        <td class="sum"><span>@item.Sum</span> lv.</td>
                        <td class="status"><span>@item.Status</span></td>
                        <td><a asp-controller="Admin" asp-action="Info" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a></td>


                    </tr>
                }

            </table>
        </div>
    </div>
