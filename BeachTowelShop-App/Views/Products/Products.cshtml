@model BeachTowelShop.Models.Products.GalleryProductsViewModel
@{
    ViewData["Title"] = "Products";
}



<div class="container">
   
        <div class="row-div" style="justify-content: flex-end;margin-top:5em;margin-bottom:-8em;">
            <nav aria-label="Page navigation example">
                <ul class="pagination">

                    <li class="page-item"><a class="page-link" asp-action="@(ViewBag.Action)" asp-route-startPage="0" asp-route-categoryid="@ViewBag.CategoryId">First</a></li>
                    <li class="page-item"><a class="page-link" asp-action="@(ViewBag.Action)" asp-route-startPage="@(ViewBag.NextPage)" asp-route-categoryid="@ViewBag.CategoryId">Next</a></li>
                    <li class="page-item"><a class="page-link" asp-action="@(ViewBag.Action)" asp-route-startPage="@(ViewBag.PreviousPage)" asp-route-categoryid="@ViewBag.CategoryId">Previous</a></li>

                </ul>
            </nav>
        </div>
    
        <div class="gallery-row">

            <div class="side-bar">
                <h3>Categories</h3>
                <ul>
                    @if (Model.AllCategories.Count == 0)
                    {
                        <li> <a href=""> No Categories </a></li>
                    }
                    @foreach (var category in Model.AllCategories)
                    {

                        <li> <a asp-controller="Products" asp-action="GetItemsForCategory" asp-route-categoryid="@category.Id" asp-route-startPage="0"><i class="fas fa-chevron-right fa-xs"></i>@category.Name </a></li>

                    }
                </ul>
            </div>

            <div id="gallery-products">

                @foreach (var item in Model.AllProducts)
                {
                    <div class="item">

                        <div class="picture">
                            <a asp-controller="Products" asp-action="Item" asp-route-itemid="@item.Id"> <img src="~/@item.PictureList.FirstOrDefault()" alt="" class="gallery__img"></a>
                        </div>
                        <h2>@item.Name</h2>
                        <h3><span>From</span> @item.LowestPrice lv</h3>
                        <div class="gallery-buttons">

                            <a asp-controller="Products" asp-action="Item" asp-route-itemid="@item.Id"> <i class="fas fa-plus-square fa-lg"></i> See more</a>
                        </div>

                    </div>
                }


            </div>

        </div>
        @if (Model.AllProducts.Count == 0)
        {
            <h1>-----------No Products-----------</h1>
        }
      

            <div class="row-div" style="justify-content: flex-end;">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">

                        <li class="page-item"><a class="page-link" asp-action="@(ViewBag.Action)" asp-route-startPage="0" asp-route-categoryid="@ViewBag.CategoryId">First</a></li>
                        <li class="page-item"><a class="page-link" asp-action="@(ViewBag.Action)" asp-route-startPage="@(ViewBag.NextPage)" asp-route-categoryid="@ViewBag.CategoryId">Next</a></li>
                        <li class="page-item"><a class="page-link" asp-action="@(ViewBag.Action)" asp-route-startPage="@(ViewBag.PreviousPage)" asp-route-categoryid="@ViewBag.CategoryId">Previous</a></li>

                    </ul>
                </nav>
            </div>
        
    </div>

